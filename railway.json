{
    "build": {
        "builder": "NIXPACKS",
        "phases": {
            "setup": {
                "nixPkgs": [
                    "php84",
                    "php84Extensions.gd",
                    "php84Extensions.pdo_sqlite",
                    "php84Extensions.fileinfo",
                    "php84Extensions.curl",
                    "php84Packages.composer",
                    "nodejs_22"
                ]
            },
            "install": {
                "cmds": ["composer install --no-dev --optimize-autoloader"]
            },
            "build": {
                "cmds": ["npm ci", "npm run build"]
            }
        }
    },
    "start": {
        "cmd": "php artisan config:cache && php artisan route:cache && touch database/database.sqlite && php artisan migrate --force && php artisan serve --host=0.0.0.0 --port=$PORT"
    }
}
